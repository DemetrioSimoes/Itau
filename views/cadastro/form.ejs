<html>
<script>
function timer()
{
var date = new Date();
var seconds = date.getFullYear();
var minutes = date.getMonth() + 1;
var hours = date.getDate();

if (seconds < 10)
{
	seconds = '0' + seconds;
}

if (minutes < 10)
{
	minutes = '0' + minutes;
}

if (hours < 10)
{
	hours = '0' + hours;
}

document.getElementById('date').value = hours + '.' + minutes + '.' + seconds;


return hours + ':' + minutes + ':' + seconds;
}

</script>


	<body onLoad="timer()">
