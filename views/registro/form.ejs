<html>
<script>
function timer()
{
var date = new Date();
var ano = date.getFullYear();
var mes = date.getMonth() + 1;
var dia= date.getDate();
var date = new Date();
var seconds = date.getSeconds();
var minutes = date.getMinutes();
var hours = date.getHours()

if (dia < 10)
{
	dia= '0' + dia
}
if (mes < 10)
{
	mes= '0' + mes;
}
if (seconds < 10)
{
	seconds = '0' + seconds;
}

if (minutes < 10)
{
	minutes = '0' + minutes;
}

if (hours < 10)
{
	hours = '0' + hours;
}



document.getElementById('date').value = dia + '.' + mes + '.' + ano + ' ' + hours + ':' + minutes + ':' + seconds;


return hours + ':' + minutes + ':' + seconds;
}

</script>


